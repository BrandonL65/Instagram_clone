<div class="nav-show">


    <div class="icon-show">
      <a href='/users'>
      <i class="fa fa-instagram fa-2x"  style="color:black;">Instagram</i></a>
    </div>

    <div class="search-bar">
      <%= form_tag(user_search_path ,method: :post) do %>
      <%= text_field_tag :search %>
      <%= submit_tag 'Search' %>
    <% end %>
  </div>


    <div class="upload-show">
      <a href="/photos/new">
      <i class="fa fa-upload fa-2x" style="color:black;" >Upload</i></a>

    </div>

    <div class="signout-bar">
      <i class="fa fa-sign-out fa-2x"></i></a>
      <%= button_to "logout" , "/auth", method: "delete" %>
    </div>
<!-- nav-show end -->
</div>




<div class="wrapper-show">
  <div class="container-show">

    <div class="info-show">

        <div class="pp-show">

                <% if @user.photos.first.nil?%>
                      <%= image_tag 'download.jpeg' %>
                      <%= button_to "Upload" ,'/photos/new' ,method: :get %>
                  <% else %>
                  <div class="pp">
                    <%= image_tag(@user.photos.first.image) %>
                  </div>
                  <% end %>

        </div>

        <div class="bio-show">

            <div class="name-show">
              <h3>  <%= @user.user_name %></h3>
              <%= button_to "Edit Profile", edit_user_path(@user), method: :get %>
            </div>


            <!-- follow-start -->
            <div class="follow-count">

              <div>
              <h4><%= @user.photos.count %></h4>Posts
              </div>

              <div>
                <a href="/follow/following"" style="color:black">
              <h4><%= @user.followers.count %></h4>Following
              </a>
              </div>

              <div>
                <a href="/follow/followers"" style="color:black">
                <h4><%= @user.followees.count %></h4>Followers
                </a>
              </div>
              <!-- follow -end -->
            </div>


              <br>
              <h4>  <%= @user.name %></h4>
              <p> <%= @user.bio %></p>


              <!-- bio show end -->
        </div>
        <!-- info show end -->
        </div>


<hr>

  <div class="image-show">

    <% if !@user.photos.nil?%>
      <% @user.photos.each do |photo| %>
      <div class="each-image">
 <%=link_to image_tag(photo.image),photo_path(photo) %>
        </div>

      <% end %>
    <% end %>

</div>


<!-- container show end -->
  </div>
  <!-- wrapper -->
</div>
